<div id='sign-in-paper'>
    <div class='sign-in-wrapper'>
        <form class='sign-in-form' {{action 'sign_in' on='submit'}}>
        <button {{action 'hideLogin'}}class='login-exit'>X</button><br>
        {{input id='username' placeholder='Username' value=username}}<br>
        {{input id='passwd' placeholder='Password' type='password' value=passwd}}
        <div class='button-wrapper'>
            <button id='button' type="submit">Sign in</button>
            {{#link-to 'register'}}<button id='button'>Register</button>{{/link-to}}
        </div>
        {{#if errorMessage}}
            <span class='error'>{{errorMessage}}</span>
        {{/if}}
        </form>
    </div>
</div>


{{yield}}