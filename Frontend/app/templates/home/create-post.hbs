<div class='main-centered-container'>
    <div class='create-news-post-wrapper'>
        <div class='create-news-post-heading'>Create A News Post</div>
        <form {{action 'post_news' on='submit'}}>
            <label>Title</label>
            {{input value=model.title}}
            {{textarea value=model.body}}
            <button type='submit'>Post</button>
            {{#if errorMessage}}
                <p class='error'>{{errorMessage}}</p>
            {{/if}}
        </form>
    </div>
</div>

{{outlet}}